<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/prof_view"
    >

    <View
        android:id="@+id/blue_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/profile_rect_1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#317AB3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/profile_pic" />

    <View
        android:id="@+id/name"
        android:layout_width="245dp"
        android:layout_height="94dp"
        android:background="@drawable/profile_rect_2"
        android:elevation="0dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_pic"
        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="250dp"
        android:layout_height="27dp"
        android:text="Enter your name"
        android:textAlignment="center"
        android:textAppearance="@style/profile_name"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_pic"
        />

    <Button
        android:id="@+id/sign_out"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/exit_button"
        android:elevation="8dp"
        android:text="SIGN OUT"
        android:textColor="#527D8B"
        />

    <TextView
        android:id="@+id/str_1"
        android:layout_width="162dp"
        android:layout_height="27dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="155dp"
        android:text="Nearest shop"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        android:textColor="#8DA8B4"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/str_2"
        android:layout_width="162dp"
        android:layout_height="27dp"
        android:layout_below="@+id/str_1"
        android:layout_marginTop="22dp"
        android:layout_marginStart="155dp"
        android:text="Last purchase"
        android:textSize="20sp"
        android:textColor="#8DA8B4"
        android:gravity="top"
        />

    <View
        android:id="@+id/point_1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/point"
        android:layout_below="@+id/name"
        android:layout_marginTop="33dp"
        android:layout_marginStart="120dp"
        />
    <View
        android:id="@+id/point_2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/point"
        android:layout_below="@+id/point_1"
        android:layout_marginTop="37dp"
        android:layout_marginStart="120dp"
        />


</RelativeLayout>