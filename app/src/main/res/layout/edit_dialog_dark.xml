<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302F2F"
    >

    <RelativeLayout
        android:id="@+id/dialog_theme"
        android:layout_width="280dp"
        android:layout_height="157dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="#302F2F"
        >

        <TextView
            android:id="@+id/heading"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Editing"
            android:textSize="20sp"
            android:textColor="#5F737A"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_text"
            android:layout_height="66.52dp"
            android:layout_width="203dp"
            android:layout_below="@+id/heading"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:translationY="-2.62sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:textColor="#5F737A"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/dialog_done"
            android:layout_width="74dp"
            android:layout_height="25.05dp"
            android:background="#00000000"
            android:text="Apply"
            android:layout_below="@+id/edit_text"
            android:layout_marginStart="175dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/apply_name_dark"
            />
        <Button
            android:id="@+id/dialog_del"
            android:layout_width="74dp"
            android:layout_height="25.05dp"
            android:background="#00000000"
            android:layout_below="@+id/edit_text"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/apply_name_dark"
            android:text="Delete"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>